<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_driver"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.farmconnect.fragment.DriverDashboardFragment"
        android:label="Driver Dashboard"
        tools:layout="@layout/fragment_driver_dashboard">
        <action
            android:id="@+id/action_driverDashboardFragment_to_jobDetailsFragment"
            app:destination="@id/navigation_jobs" />
    </fragment>

    <fragment
        android:id="@+id/navigation_jobs"
        android:name="com.example.farmconnect.fragment.JobDetailsFragment"
        android:label="Job Details"
        tools:layout="@layout/fragment_job_details" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.farmconnect.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>

