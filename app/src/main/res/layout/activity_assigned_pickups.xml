                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Farmer Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Farmer:"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFarmer1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Mwangi Kimani"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Location Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location:"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLocation1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="123 Green Valley Rd"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Crop Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Crop:"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCrop1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Organic Carrots"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Weight Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Weight:"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWeight1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="250 kg"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Map Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMap1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Map"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:backgroundTint="@color/button_map"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_map"
                        app:iconTint="@color/white" />

                    <!-- Complete Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnComplete1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Complete"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:backgroundTint="@color/button_complete"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_check"
                        app:iconTint="@color/white" />

                    <!-- Cancel Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:backgroundTint="@color/button_cancel"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_close"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

