<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="My Route"
        app:titleCentered="true"
        app:titleTextColor="@android:color/black" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== Distance & Time Card (single pill) ===== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <!-- Distance row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Distance to Cover"
                            android:textSize="14sp"
                            android:textColor="#777777" />

                        <TextView
                            android:id="@+id/distanceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.2 km"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />
                    </LinearLayout>

                    <!-- Time row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated Time Left"
                            android:textSize="14sp"
                            android:textColor="#777777" />

                        <TextView
                            android:id="@+id/timeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35 min"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#111111" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Route Overview Card ===== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Route Overview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="12dp" />

                <!-- Buttons row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAssignedPickups"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Assigned Pickups"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/primary_blue"
                        app:backgroundTint="@color/btnCancel_light_blue"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_driver"
                        app:iconTint="@color/primary_blue" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartNavigation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Start\nNavigation"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/primary_blue"
                        app:backgroundTint="@color/btnCancel_light_blue"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_navigation_24"
                        app:iconTint="@color/primary_blue" />
                </LinearLayout>

                <!-- Map preview -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/bg_map_rounded">

                    <!-- Replace with MapView in real implementation -->
                    <ImageView
                        android:id="@+id/mapPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_map_placeholder"
                        android:layout_marginBottom="12dp" />

                </FrameLayout>

                <!-- Current location row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_my_location"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location: Your current position"
                        android:textSize="13sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Destination row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destination: Farmer Kamau's Farm"
                        android:textSize="13sp"
                        android:textColor="#222222" />
                </LinearLayout>

                <!-- Slide to complete (visual only here) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_slide_track"
                    android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Slide to mark Completed"
                    android:textSize="13sp"
                    android:textColor="#777777" />

                <!-- Knob -->
                <ImageView
                    android:id="@+id/slideKnob"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="start|center_vertical"
                    android:background="@drawable/bg_slide_knob"
                    android:src="@drawable/ic_forward_arrow"
                    android:padding="8dp"
                    android:contentDescription="Slide knob"
                    app:tint="@color/white" />

                <!-- Green check icon on the right -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#00C853" />
            </FrameLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
