<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- Small header at top of card -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Buyer Dashboard"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Thin divider under header -->
    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Marketplace label -->
    <TextView
        android:id="@+id/tvMarketplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Marketplace"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerTop" />

    <!-- Filter / Sort buttons row -->
    <LinearLayout
        android:id="@+id/llFilterSort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvMarketplace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:text="Filter"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_sort_by_size"
            app:iconPadding="5dp"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_blue"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/btnCancel_light_blue"
            android:textColor="#007AFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSort"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Sort By"
            android:textSize="14sp"
            app:icon="@drawable/ic_arrow_drop_down_24"
            app:iconPadding="50dp"
            app:iconGravity="textEnd"
            app:iconTint="@color/primary_blue"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/btnCancel_light_blue"
            android:textColor="#007AFF" />

    </LinearLayout>

    <!-- Product grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/llFilterSort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>