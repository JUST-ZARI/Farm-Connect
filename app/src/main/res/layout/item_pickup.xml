<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Farmer Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Farmer:"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFarmerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Mwangi Kimani"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location:"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="123 Green Valley Rd"
                android:textColor="@color/text_dark"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Crop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crop:"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Organic Carrots"
                android:textColor="@color/text_dark"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weight:"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="250 kg"
                android:textColor="@color/text_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Map Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸ—ºï¸ Map"
                android:textSize="10sp"
                android:padding="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/driver_light" />

            <!-- Record Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="ðŸ“ Record"
                android:textSize="10sp"
                android:padding="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/driver_light" />

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="âŒ Cancel"
                android:textSize="10sp"
                android:padding="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/pickup_status_cancelled"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Status and Pickup Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="3">

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Scheduled"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="@color/pickup_status_scheduled"
                app:cornerRadius="8dp" />

            <!-- Pickup Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="4dp"
                android:text="ðŸšš Start Pickup"
                android:textSize="12sp"
                android:padding="8dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/driver_primary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>