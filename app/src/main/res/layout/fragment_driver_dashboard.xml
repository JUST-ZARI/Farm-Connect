<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:title="Driver Dashboard"
        app:titleCentered="true"
        app:titleTextColor="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Daily Overview title -->
            <TextView
                android:id="@+id/tvDailyOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Overview"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Two stat cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Pickups Today -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPickupsToday"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvPickupsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="#2196F3"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickups Today"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- KMs Driven Today -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardKmsToday"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvKmsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85"
                            android:textColor="#2196F3"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KMs Driven Today"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Monthly Distance Covered title -->
            <TextView
                android:id="@+id/tvMonthlyDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Distance Covered"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Chart card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMonthlyChart"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <!-- Replace this ImageView with your actual chart view -->
                <ImageView
                    android:id="@+id/imgMonthlyChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_chart_24" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Primary button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAssignedPickups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Assigned Pickups"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginBottom="8dp"
                android:paddingVertical="12dp"
                app:cornerRadius="15dp"
                app:backgroundTint="#2196F3"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
