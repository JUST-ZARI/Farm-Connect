<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar: back + title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/previous" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Delivery Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray"
            android:layout_marginBottom="12dp" />

        <!-- MAIN CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- CARD 1 : order + map + ETA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <!-- Order / Estimated / Farmer / Buyer rows -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Order -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Order"
                                android:textSize="14sp"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:id="@+id/tvOrderNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FC-4321"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark" />
                        </LinearLayout>

                        <!-- Estimated -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Estimated"
                                android:textSize="14sp"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30â€“60 min"
                                android:textSize="14sp"
                                android:textColor="@color/text_dark" />
                        </LinearLayout>

                        <!-- Farmer -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Farmer"
                                android:textSize="14sp"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:id="@+id/tvFarmerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kamau Kariuki"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark" />
                        </LinearLayout>

                        <!-- Buyer -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Buyer"
                                android:textSize="14sp"
                                android:textColor="@color/text_light" />

                            <TextView
                                android:id="@+id/tvBuyerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achieng Markets"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Location field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_location_field"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/text_light" />

                        <EditText
                            android:id="@+id/etDeliveryLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:hint="Enter delivery location"
                            android:maxLines="1"
                            android:textSize="14sp" />

                        <!-- small round button on the right -->
                        <ImageButton
                            android:id="@+id/btnMyLocation"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/bg_round_icon_button"
                            android:src="@drawable/ic_my_location"
                            android:contentDescription="@string/my_location"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <!-- Map -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/bg_map_rounded">

                        <!-- Replace with MapView in real implementation -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_map_placeholder" />
                    </FrameLayout>

                    <!-- Estimated time + Get ETA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estimated time"
                            android:textSize="13sp"
                            android:textColor="@color/text_light" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tvEta"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp"
                            android:text="Get ETA"
                            android:textSize="13sp"
                            app:cornerRadius="20dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/primary_blue"
                            app:icon="@drawable/ic_eta"
                            app:iconGravity="textStart"
                            app:iconPadding="6dp"
                            app:iconTint="@color/primary_blue"
                            android:textColor="@color/primary_blue" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ITEMS TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Items"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <!-- CARD 2 : items list -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <!-- Sukuma Wiki -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sukuma Wiki (Kale)"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 crates"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />
                    </LinearLayout>

                    <!-- Tomatoes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tomatoes"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 crates"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />
                    </LinearLayout>

                    <!-- Irish Potatoes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Irish Potatoes"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 bags"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceedToPayment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Proceed to Payment"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/primary_blue"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
