                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:text="123 Green Valley Rd"
                            android:textColor="#111111"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Crop -->
