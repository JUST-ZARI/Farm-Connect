                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Your Pickups"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- PICKUP CARD 1 -->
